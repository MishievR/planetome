<div class="row">
  <div class="col">
    <div class="card card-login">
      <div class="card-body">
        <%= form_for(@category, :html => {role: "form"}) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :about %>
            <%= f.text_field :about, autofocus: false, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= image_tag @category.background, class: "profilePhoto" if @category.background? %>
            <%= f.label :upload_background_photo %>
            <%= f.file_field :background, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
          </div>
          <%= f.submit class: 'btn btn-danger' %>
          <small class="form-text text-muted">NOTE: It may take some time to upload your background image, <strong>don't reload the web page please!</strong></small>
        <% end %>
      </div>
    </div>
  </div>
</div>
