

<div class="row">
  <% if user_signed_in? && current_user.admin? %>
  <div class="col-12  col-md-7 col-lg-8 col-xl-9">
    <h3 class="main-text-color">Jobs categories
    <br>
    <small class="text-muted">Find your way.</small>
    </h3>
  </div>
    <div class="col-12  col-md-5 col-lg-4 col-xl-3">
      <%= link_to(new_category_path, class: "btn btn-outline-danger btn-block ") do %>
      <i class="fas fa-plus"></i>
      Add new category
      <% end %>
    </div>
  <% else %>
  <div class="col-12">
    <h3 class="main-text-color">Jobs categories
    <br>
    <small class="text-muted">Find your way.</small>
    </h3>
  </div>
  <% end %>
</div>


<br>

<div class="row">
  <div class="col-12">
  <% @categories.each  do |cat| %>


    <div class="card card-columns">
      <%= link_to cat.title, category_path(cat), class: "btn btn-outline-danger btn btn-city-main mr-3 mt-3 mb-3"  %>
    </div>
  <% end %>
  </div>
</div>
