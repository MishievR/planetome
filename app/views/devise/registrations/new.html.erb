<%= render 'shared/errors', obj: resource %>
<div class="row">
  <div class="jumbotron jumbotron-fluid jumbo-spacefeed-signup">
    <!-- <div class="jumbo-gragient-bg"></div> -->
    <div class="container">
      <div class="col">
        <div class="row">
          <div class="col-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <div class="card card-login devise-bs">
              <!-- <div class="card-header card-header-spacefeed">
              </div> -->
              <div class="card-body">
                <h4 class="mb-3 main-text-color font-cabin"><i>Sign up to <%=  image_tag('planets_logo_full.png', style: 'height:30px;width:auto;margin-right:10px;margin-top:-5px;')%></i></h4>
                <%= form_for(resource, as: resource_name, url: user_registration_path, html: { role: 'form' }) do |f| %>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-6">
                          <h6><strong><%= f.label :first_name, class: "control-label" %>
                        <%= f.text_field :first_name, autofocus: true, class: 'form-control' %></strong></h6>
                      </div>
                      <div class="col-md-6">
                        <h6><strong><%= f.label :last_name, class: "control-label" %>
                        <%= f.text_field :last_name, autofocus: false, class: 'form-control' %></strong></h6>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <h6><strong><%= f.label :email, class: "control-label" %>
                    <%= f.email_field :email, autofocus: false, class: 'form-control' %></strong></h6>
                  </div>
                  <div class="form-group">
                    <h6><strong><%= f.label :password, class: "control-label" %>
                    <%= f.password_field :password, class: 'form-control' %></strong></h6>
                  </div>
                  <!-- <div class="form-group">
                    <h6><strong><%= f.label :password_confirmation, class: "control-label" %>
                    <%# f.password_field :password_confirmation, class: 'form-control' %></strong></h6>
                  </div> -->
                  <%= f.submit t('.sign_up_btn', default: 'Sign up'), class: 'btn btn-danger' %>
                <% end %>
              </div>
            </div>
            <%= render 'devise/shared/links' %>
          </div>
        </div>





      </div>
    </div>
  </div>
</div>
