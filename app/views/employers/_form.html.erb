<%= render 'shared/errors', obj: @employer %>
  <div class="row">
    <div class="col">
      <div class="card card-login">
        <div class="card-body pl-3">
          <%= form_for(@employer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <div class="form-group ml-2 mr-2">
                <h6><strong><%= f.label :company_name, class: "control-label" %></strong></h6>
                <%= f.text_field :company_name, class: "form-control", placeholder: "SpaceX", autofocus: true %>
                <small class="form-text text-muted">Max. 80 characters</small>
              </div>
              <br>
              <div class="form-group ml-2 mr-2">
                <h6><strong><%= f.label :pitch, class: "control-label" %></strong></h6>
                <%= f.text_area :pitch, rows: 1, class: "form-control", placeholder: "SpaceX designs, manufactures and launches advanced rockets and spacecraft.", autofocus: false, id: "pitch-field" %>
                <small class="form-text text-muted" id="pitch-count">Max. 160 characters</small>
              </div>
              <br>


              <%= link_to "Fill a full info | optional", "#collapseExample", role: :button, class: "btn btn-danger  ml-2 ", data: { parent: '#collapseExample', toggle: :collapse }, aria: { controls: :collapseExample, expanded: false } %>
              <br>
              <div class="collapse" id="collapseExample">
                <br>
                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :company_mission, class: "control-label" %></strong></h6>
                  <%= f.text_area :company_mission, rows: 1, class: "form-control", placeholder: "Enable human life on Mars", autofocus: false, id: "body-field" %>
                </div>
                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :about, class: "control-label" %></strong></h6>
                  <%= f.text_area :about, rows: 3, class: "form-control", placeholder: "The company was founded in 2002 to revolutionize space technology, with the ultimate goal of enabling people to live on other planets.", autofocus: false, id: "body-field" %>
                </div>

                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :HQ_location, class: "control-label" %></strong></h6>
                  <%= f.text_field :hq_location, class: "form-control", placeholder: "Hawthorne, CA, US", autofocus: false %>
                </div>

                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :number_of_employees, class: "control-label" %></strong></h6>
                  <%= f.text_field :number_of_employees, class: "form-control", placeholder: "~ 7.000", autofocus: false %>
                </div>

                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :year_founded, class: "control-label" %></strong></h6>
                  <%= f.text_field :year_founded, class: "form-control", placeholder: "2002", autofocus: false %>
                </div>
                <br>
                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :twitter, class: "control-label" %></strong></h6>
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon3">@</span>
                    </div>
                    <%= f.text_field :twitter, class: "form-control", placeholder: "spacex", autofocus: false, id: "body-field" %>
                  </div>
                </div>
                <div class="form-group ml-2 mr-2">
                  <h6><strong><%= f.label :facebook, class: "control-label" %></strong></h6>
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon3">https://www.facebook.com/</span>
                    </div>
                    <%= f.text_field :facebook, class: "form-control", placeholder: "spacexpage", autofocus: false, id: "body-field" %>
                  </div>
                </div>
              </div>
              <br>
              <div class="form-group ml-2 mr-2">
                <h6><strong><%= f.label :link, class: "control-label" %></strong></h6>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3">https://</span>
                  </div>
                  <%= f.text_field :link, class: "form-control", placeholder: "www.spacex.com", autofocus: false, id: "body-field" %>
                </div>
              </div>
              <div class="form-group ml-2 mr-2">
                <h6><strong><%= f.label :industry, class: "control-label" %></strong></h6>
                <%= f.text_field :industry, class: "form-control", placeholder: "Aerospace", autofocus: false, id: "body-field" %>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <div class="ml-2 mr-2">
                <%= f.submit "Create a company", class: 'btn btn-danger btn-lg btn-block  btn-post' %>
              </div>
              <br>
              <br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
