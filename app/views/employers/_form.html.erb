<%= render 'shared/errors', obj: @employer %>
  <div class="row">
    <div class="col">
      <div class="card card-login">
        <div class="card-body">
          <%= form_for(@employer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="row">
              <div class="col-12 col-md-6 col-lg-9 col-xl-9">
                <div class="form-group">
                  <%= f.label :company_name, class: "control-label" %>
                  <%= f.text_field :company_name, class: "form-control", placeholder: "Apple", autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.label :pitch, class: "control-label" %>
                  <%= f.text_area :pitch, rows: 3, class: "form-control", placeholder: "You will work on our newest app that will change the world", autofocus: false, id: "body-field" %>
                  <small class="form-text text-muted" id="body-count">0</small>
                </div>
                <div class="form-group">
                  <%= f.label :about, class: "control-label" %>
                  <%= f.text_area :about, rows: 3, class: "form-control", placeholder: "You will work on our newest app that will change the world", autofocus: false, id: "body-field" %>
                  <small class="form-text text-muted" id="body-count">0</small>
                </div>
                <div class="form-group">
                  <%= f.label :company_mission, class: "control-label" %>
                  <%= f.text_area :company_mission, rows: 3, class: "form-control", placeholder: "You will work on our newest app that will change the world", autofocus: false, id: "body-field" %>
                </div>

                <div class="form-group">
                  <%= f.label :hq_location, class: "control-label" %>
                  <%= f.check_box :hq_location, class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :number_of_employees, class: "control-label" %>
                  <%= f.text_field :number_of_employees, class: "form-control", placeholder: "~ 10.000", autofocus: false %>
                </div>

                <div class="form-group">
                  <%= f.label :year_founded, class: "control-label" %>
                  <%= f.text_field :year_founded, class: "form-control", placeholder: "1992", autofocus: false %>
                </div>



                <div class="form-group">
                  <%= f.label :link, class: "control-label" %>
                  <%= f.text_field :link, class: "form-control", placeholder: "Link to the company", autofocus: false, id: "body-field" %>
                </div>
                <div class="form-group">
                  <%= f.label :twitter, class: "control-label" %>
                  <%= f.text_field :twitter, class: "form-control", placeholder: "Twitter username", autofocus: false, id: "body-field" %>
                </div>
                <div class="form-group">
                  <%= f.label :facebook, class: "control-label" %>
                  <%= f.text_field :facebook, class: "form-control", placeholder: "Link to the company's facebook page", autofocus: false, id: "body-field" %>
                </div>

                <div class="form-group">
                  <%= f.label :industry, class: "control-label" %>
                  <%= f.text_field :industry, class: "form-control", placeholder: "Aerospace", autofocus: false, id: "body-field" %>
                </div>





              </div>
              <div class="col-12 col-md-6 col-lg-3 col-xl-3">

            </div>
          </div>
          <%= f.submit class: 'btn btn-outline-danger' %>
          <small class="form-text text-muted">NOTE: It may take some time to upload your background and/or profile image, <strong>don't reload the web page please!</strong></small>
        <% end %>
      </div>
    </div>
  </div>
</div>
