

<div class="row">
  <% if user_signed_in? && current_user.admin == true %>
  <div class="col-11">
    <h3 class="main-text-color">Fields
    <br>
    <small class="text-muted">The field where you want to start.</small>

    </h3>
  </div>
    <div class="col-1">
      <%= link_to(new_field_path, class: "btn btn-outline-danger") do %>
      <i class="fas fa-plus"></i>
      Create Field
      <% end %>
    </div>


  <% else %>
  <div class="col-12">
    <h3 class="main-text-color">Fields
    <br>
    <small class="text-muted">The field where you want to start.</small>

    </h3>
  </div>
  <% end %>


</div>
<div class="row">
  <% @fields.each do |field| %>
  <div class="col-6 col-md-6 col-lg-3 col-xl-3">
    <%= link_to field_path(field) do %>
    <div class="card bg-dark text-white card-field-main text-center mr-3 mt-3">
      <%= image_tag field.background, class: "card-field-img" if field.background? %>
      <div class="card-img-overlay">
        <h5 class="card-title card-title-field"><%= field.name%></h5>
      </div>
    </div>

    <% end %>

  </div>

  <% end %>

</div>
