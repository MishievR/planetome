<div class="row">
  <% if user_signed_in? %>
  <div class="col-12  col-md-7 col-lg-8 col-xl-9">
    <h1 class="main-text-color">Fields</h1>
    <h3><small class="text-muted">The field where you want to start.</small></h3>
  </div>
    <div class="col-12 col-md-5 col-lg-4 col-xl-3">
      <% if current_user.admin == true   %>
          <%= link_to "Create Field", new_field_path, class: "btn btn-outline-danger btn-block" %>
      <% end %>
    </div>
  <% else %>
    <div class="col-12">
      <h1 class="main-text-color">Fields</h1>
      <h3><small class="text-muted">The field where you want to start.</small></h3>
    </div>
  <% end %>
</div>
<br>
<div class="row">
  <% @fields.each do |field| %>
  <div class="col-6 col-md-6 col-lg-3 col-xl-3">
    <%= link_to field_path(field) do %>
    <div class="card bg-dark text-white card-field-main text-center mt-3">
      <%= image_tag field.background.url, class: "card-field-img" if field.background? %>
      <div class="card-img-overlay">
        <h5 class="card-title card-title-field"><%= field.name%></h5>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
