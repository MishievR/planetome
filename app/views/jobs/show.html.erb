
<div class="row">
  <div class="col-11">
    <h3 class="main-text-color"><%= @job.position %> at <%= @job.employer.company_name %>
    <br>
    <small class="text-muted"><%= @job.impact %> | <%= link_to "(edit)", edit_job_path(@job)%></small>
    </h3>
    <p class="text-muted">
    <% @job_categories.each do |category| %>
    â€¢ <%= link_to category.title, category_path(category), class: "normal-link-red" %>
    <% end %>
    </p>
  </div>
</div>
<br>
<br>

<div class="row">
  <div class="col-11">
    <div class="card">
      <div class="card-body">
        <h6><strong>Job description:</strong></h6>
        <p><%= simple_format @job.job_description %></p>
        <br>
        <h6><strong>Responsibilities:</strong></h6>
        <p><%= simple_format @job.responsibilities %></p>
        <br>
        <h6><strong>Requirements:</strong></h6>
        <p><%= simple_format @job.requirements %></p>
        <br>
        <% if @job.is_special_requirements == true %>
        <div class="card">
          <div class="card-body">
            <h6><strong>Special requirements:</strong></h6>
            <p><%= simple_format @job.special_requirements %></p>
          </div>
        </div>
        <% end %>
        <br>
        <hr>
        <h6><strong>Location:</strong></h6>
        <p><%= @job.location %>
        <% if @job.is_remote == true %>
        | <strong>You can work remote.</strong>
        <% end %></p>
        <br>
        <h6><strong>Salary:</strong></h6>
        <p>$<%= @job.salary %>K /year</p>
          <br>
        <% if current_user %>
        <h6><strong>Email to contact:</strong></h6>
        <p><%= @job.email_to_contact %></p>
        <br>
        <% end %>
        <%= link_to "Apply", "https://#{@job.link}", class: "btn btn-outline-danger " %>
      </div>
    </div>
  </div>
</div>
