<div class="container-fluid footer">
  <div class="row">
    <div class="col-9">
      <p class="footer-text">Copyright &copy; 2018 <a href="http://www.rmishiev.com", class="text-muted">Roman Mishiev</a></p>
    </div>
    <div class="col-3">
      <button type="button" class="btn btn-sm btn-link  btn-menu-nav float-right" data-toggle="modal" data-target="#exampleModal">
        <i class="far fa-compass"></i>
      </button>
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
          <div class="modal-content model-dialog-menu">
            <div class="modal-header modal-header-menu">
              <h5 class="modal-title modal-title-menu" id="exampleModalLabel">Controls</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <% if user_signed_in? %>
              <div class="row">
                  <%= image_tag current_user.avatar.url(:thumb), class: "profilePhotoMenu" if current_user.avatar? %>
                  <% if current_user == @user && @user.first_name == nil %>
                  <h5 class="user-title-menu"><%= link_to "Add info", edit_user_path(current_user), class: "user-link-menu" %></h5>
                  <% else %>
                  <h5 class="user-title-menu"><%= link_to current_user.name, user_path(current_user), class: "user-link-menu" %></h5>
                  <% end %>
              </div>


              <div class="dropdown-divider"></div>
              <h6 class="dropdown-header">Profile</h6>

              <%= link_to(user_path(current_user), class: "dropdown-item dropdown-item-menu") do %>
              <i class="fas fa-user"></i>
              My profile
              <% end %>
              <%= link_to(edit_user_path(current_user), class: "dropdown-item dropdown-item-menu") do %>
              <i class="fas fa-edit"></i>
              Edit profile
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to(destroy_user_session_path, method: :delete, class: "dropdown-item dropdown-item-menu") do %>
              <i class="fas fa-sign-out-alt"></i>
              Log out
              <% end %>

            <% else %>
              <!-- <h6 class="dropdown-header">Navigation</h6>
              <div class="dropdown-divider"></div> -->
              <%= link_to(new_user_session_path, :class=>"dropdown-item dropdown-item-menu") do %>
                <i class="fas fa-sign-in-alt"></i>
                Log In
              <% end %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>

  </div>
</div>
