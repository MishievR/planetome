<div class="row">
  <div class="col-12">
    <div class="card card-user-page">
      <%= image_tag @employer.background.url, class: "card-user-bg-img card-img-top" if @employer.background? %>
        <div class="card-img-overlay">
          <div class="d-flex justify-content-center">
            <%= image_tag @employer.logo.url(:medium), class: "profilePhoto " if @employer.logo? %>
          </div>
          <div class="d-flex justify-content-center">
            <h5 class="card-title card-title-user text-center"><%= @employer.company_name %></h5>
          </div>
        </div>
      <div class="card-body">
        <p class="card-text"><%= @employer.pitch %></p>
      </div>
    </div>
    <br>
    <% if current_user == @user %>
      <%= link_to "Start project", new_project_path, class: "btn btn-block btn-outline-danger"  %>
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-block btn-outline-danger"  %>
    <% end %>
  </div>
</div>
<br>
<br>
