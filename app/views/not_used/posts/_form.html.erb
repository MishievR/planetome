<div class="row">
  <div class="col">
    <div class="card card-login">
      <div class="card-body">
        <%= form_for [@community, @post]  do |f| %>
          <div class="row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <div class="form-group">
                <%= f.label :title, class: "control-label" %>
                <%= f.text_field :title, class: "form-control", placeholder: "Just a few words here", autofocus: true, id: "title-field" %>
                <small class="form-text text-muted" id="title-count">0</small>
              </div>
              <div class="form-group">
                <%= f.label :body, class: "control-label" %>
                <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "Everything you want to write", autofocus: false, id: "body-field" %>
              </div>
            </div>
          </div>
        <%= f.submit class: 'btn btn-outline-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
