<div class="row">
  <div class="col-12 col-sm-12 col-md-12 col-lg-12">
    <div class="row">
      <div class="col-md-8">
        <div class="card card-job-post">
          <div class="card-body">
            <%= link_to new_job_path, class: "card-community-link"  do %>
              <h5 class="card-title"><strong>Post a Job - <small><s class="s-red">$179</s></small> $129 pre-launch price</strong> <small>Learn about pricing</small></h5>
              <p class="card-text">Post a meaningful job to get super interested applicants.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
