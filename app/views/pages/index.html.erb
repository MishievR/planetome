    <div class="row">
      <div class="col">
        <%= link_to(communities_path, class: "pages-index-main-links good-font") do %>
        <h1 class="main-text-color">Curated collections</h1>
        <h3><small class="text-muted">Amazing opportunities handpicked by the MakeImpact team.</small></h3>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @communities.take(8).each do |community| %>
    	  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= link_to community_path(community), class: "card-community-link" do %>
          <div class="card bg-dark text-white text-white card-field-main  mt-3">
            <%= image_tag community.background, class: "card-commutity-img " if community.background? %>
            <div class="card-img-overlay h-100 d-flex flex-column justify-content-end">
              <h3 class="card-title card-title-index "><strong class="font-red-background-color"><%= community.name %></strong></h3>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <% if @communities.count < 8 %>
      <br>
      <br>
    <% else %>
    <div class="row">
      <div class="col">
          <%= link_to(communities_path, class: "btn btn-outline-danger btn-block btn-moreinfo-main main-text-color mt-3") do %>
          + <%= Community.count-8 %> more
          <% end %>
      </div>
    </div>
    <% end %>
    <br>
    <br>
    <div class="row">
      <div class="col">
        <%= link_to(categories_path, class: "pages-index-main-links good-font") do %>
        <h1 class="main-text-color">Categories</h1>
        <h3><small class="text-muted">Pick where you are the best or where do you want to start.</small></h3>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @categories.each  do |cat| %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= link_to category_path(cat) do  %>
          <div class="card card-category-main text-center mt-3">
            <h6 class="card-title category-title"><strong><%= cat.title %></strong></h6>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <br>
    <br>
    <div class="row">
      <div class="col">
        <h1 class="main-text-color good-font">Recent jobs</h1>
        <h3><small class="text-muted good-font">The most fresh opportunities!</small></h3>
      </div>
    </div>
    <br>
    <div class="row">
      <% @jobs.order("created_at DESC").take(30).each do |job| %>
    	  <div class="col-12 col-md-12 col-lg-12 col-xl-12">
          <div class="card card-job-listing-main">
            <div class="card-body">
              <div class="row">
                <div class="col-12 col-md-10 col-lg-9 col-xl-10">
                  <h5 class="card-title">
                  <% if job.is_remote == true %>
                  <small>Remote </small>
                  <% end %>
                  <strong><%= link_to job.position, job_path(job), class: "normal-link-red" %></strong>
                  <small> at <%= link_to job.employer.company_name, employer_path(job.employer), class: "normal-link-light-grey"%>
                  <% if job.is_remote == false && job.location != "" %>
                  in <%= job.location %>
                  <% end %>
                </small></h5>
                <h6 class="card-title", style="margin-top:10px;"><strong><%= job.impact %></strong></h6>
                </div>
                <div class="col-12 col-md-2 col-lg-3 col-xl-2">
                  <%= link_to "https://#{job.link}" do  %>
                    <h5 class="category-title float-right btn-apply">Apply</h5>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <h6><small class="float-right text-muted job-listing-time mr-2", style="margin-top:5px;">
            <% if current_user && current_user.admin? %>
          <%= link_to "edit", edit_job_path(job) %> |
          <% end %><%= time_ago_in_words(job.created_at) %> ago</small></h6>
        <br>
      </div>
      <% end %>
    </div>
    <% if @jobs.count < 29 %>
      <br>
      <br>
    <% else %>
    <div class="row">
      <div class="col">
          <%= link_to(jobs_path, class: "btn btn-lg btn-danger btn-block btn-moreinfo-main  mt-3") do %>
          Show all jobs
          <% end %>
      </div>
    </div>
    <% end %>
    <br>
    <br>
