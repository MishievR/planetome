    <div class="row">
      <div class="jumbotron jumbotron-fluid jumbo-spacefeed">
        <!-- <div class="jumbo-gragient-bg"></div> -->
        <div class="container">
          <div class="col">
            <% if current_user.present? %>
              <div class="row">
                <div class="col">
                  <% if current_user == @user && @user.first_name == nil %>
                  <h5 class="user-title-menu"><%= link_to "Add personal info", edit_user_path(current_user), class: "user-link-index" %></h5>
                  <% else %>
                  <h1 class=" main-text-color good-font mt-3">Hi,
                    <%= image_tag current_user.avatar.url(:thumb), class: "profilePhotoIndex" if current_user.avatar? %>
                    <%= link_to current_user.first_name, user_path(current_user), class: "user-link-index" %>
                    <br>
                    <small>Build working communities in places you love.</small>
                  </h1>
                  <% end %>
                </div>
              </div>
            <div class="row">
              <div class="col">
                <%= link_to "Add a new place", new_place_path, data: { turbolinks: false }, class: "btn btn-lg btn-danger btn-post-job good-font"%>
              </div>
            </div>
            <% else %>

            <h1 class=" main-text-color  good-font mt-3">Join us
            <br>
            <small>Become a member of a powerful, working community.</small>
            </h1>
            <div class="row">
              <div class="col">
                <%= link_to "Sign Up", new_user_registration_path, data: { turbolinks: false }, class: "btn btn-lg btn-danger btn-post-job good-font"%>
              </div>
            </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <br>
    <br>





    <div class="row">
      <div class="col">
        <h1 class="main-text-color">Places to work</h1>
        <h3><small class="text-muted">Find a perfect spot or an office.</small></h3>
      </div>
    </div>
    <div class="row">
      <% @places.each do |place| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= link_to place_path(place), class: "card-community-link" do %>
          <div class="card bg-dark text-white text-white card-field-main  mt-3">
            <%= image_tag place.main_image, class: "card-commutity-img-planetome " if place.main_image? %>
            <div class="card-img-overlay h-100 d-flex flex-column justify-content-end">
              <!-- <h3 class="card-title card-title-index "><strong class="font-red-background-color"><%# community.name %></strong></h3> -->
            </div>
          </div>
          <div class="row">
            <div class="col">
              <h4 class="mt-2 main-text-color"><%= place.name %></strong> </h4>
              <h6 class=" main-text-color text-muted card-office-address-text"><small><%= place.full_address %></small></h6>
              <p class="card-office-info-text">
                <% if place.place_type == "coffee_shop" %>
                  Coffee Shop |
                  <% if place.is_free_wifi = true %>
                    Free WiFi
                  <% end %>
                <% elsif  place.place_type == "coworking" %>
                  Coworking |
                  <% if place.is_good_location = true %>
                    Good location
                  <% end %>
                <% elsif  place.place_type == "smart_office" %>
                  Smart Office
                <% elsif  place.place_type == "library" %>
                  <h4 class="main-text-color">Library</h4>
                <% elsif  place.place_type == "public_place" %>
                  <h4 class="main-text-color">Public place</h4>
                <% elsif  place.place_type == "outdoors" %>
                  <h4 class="main-text-color">Outdoors</h4>
                <% elsif  place.place_type == "meeting_point" %>
                  <h4 class="main-text-color">Meeting point</h4>
                <% end %>


                <br>
                <% if place.price == 0 %>
                  Free

                <% elsif place.price == 1 %>
                  $

                <% elsif place.price == 2 %>
                  $$
                <% elsif place.price == 3 %>
                  $$$
                <% elsif place.price == 4 %>
                  $$$+
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <br>
    <br>

    <div class="row">
      <div class="col">
        <h1 class="main-text-color">Cities</h1>
        <h3><small class="text-muted">Explore workspaces around the world.</small></h3>
      </div>
    </div>

    <div class="row">
      <% @cities.take(20).each do |city| %>
      <div class="col">
        <%= link_to city.name, city_path(city), class: "btn btn-danger btn-lg btn-city-main mr-3 mt-3"  %>
      </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col">
        <div class="mr-3">
          <% if @cities.count > 20 %>
          <%= link_to(cities_path, class: "btn btn-outline-danger btn-block btn-moreinfo-main main-text-color mt-3") do %>
          + <%= City.count-20 %> more
          <% end %>

          <% else %>
          <br>

          <% end %>

        </div>
      </div>
    </div>

    <br>



    <div class="row">
      <div class="col">
        <%= link_to(ideas_path, class: "pages-index-main-links good-font") do %>
        <h1 class="main-text-color">The feed</h1>
        <h3><small class="text-muted">Know what's new here.</small></h3>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @ideas.order(:created_at => :DESC).take(5).each do |i| %>
      <div class="col-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">
        <!-- <div class="circle"></div> -->
        <!-- <div class="idea-card"> -->
          <div class="card card-idea-index mt-2">
            <div class="row">
              <%= link_to upvote_idea_path(i), method: :put, class: "btn btn-default  upvote-controls float-left" do %>
                <i class="fas fa-caret-up upvote-arrow"></i>
                <br>
                <div class="upvote-number">
                  <%= i.get_upvotes.size %>
                </div>
              <% end %>
              <div class="col-10 col-sm-9 col-md-10 col-lg-10 col-xl-11">
                <h4 class="main-text-color">
                  <%= link_to i.title, "#{i.link}", class: "main-text-color", target: :_blank %>
                </h4>
                <h5 class="feed-link"><small class="text-muted"><%= i.link %></small></h5>
                <small class="float-left text-muted" style="margin-top:7px;"><%= time_ago_in_words(i.created_at) %> ago by
                <% if i.user.present? %>
                <%= link_to i.user.name, user_path(i.user), class: "main-text-color" %>
                <% end %>
                <% if current_user.present? && current_user.admin? %>
                <%= link_to " | delete", idea_path(i), method: :delete, class: "add-idea-link", data: { confirm: 'Idea will be deleted permanently. Are you sure?' } %>
                <% end %>
                </small>
              </div>
            </div>
          <!-- </div> -->
        </div>
        <br>
      </div>
      <% end %>
    </div>
    <% if @ideas.count < 5 %>
      <br>
      <br>
    <% else %>
    <div class="row">
      <div class="col">
          <%= link_to(ideas_path, class: "btn btn-danger  main-text-color ") do %>
          Explore more news
          <% end %>
      </div>
    </div>
    <br>
    <br>

    <% end %>













