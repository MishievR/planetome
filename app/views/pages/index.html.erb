<div class="row">
  <div class="col">
    <h3 class="main-text-color">People
    <br>
    <small class="text-muted">Meet people. Connect with anyone. Start together.</small>
    </h3>
  </div>
</div>


<div class="row">
  <% @users.take(4).each do |user| %>
  <div class="col-6 col-md-6 col-lg-3 col-xl-3">
    <%= link_to user_path(user), class: "card-user-link"  do %>
    <div class="card card-user card-used-fixedheight mt-3">
      <%= image_tag user.background, class: "card-user-bg-img card-img-top" if user.background? %>

      <div class="row">
        <div class="col-6">
          <%= image_tag user.avatar.url(:medium), class: "profilePhoto" if user.avatar? %>
        </div>
        <div class="col-6">
          <!-- <p class="">Score: <%= user.status %></p> -->
        </div>
      </div>

      <div class="card-body">
        <h5 class="card-title card-title-user"><%= user.name %></h5>
        <p class="user-username">@<%= user.username %></p>
        <p class="card-text card-text-main"><%= truncate(user.about, length: 100 )%></p>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
<div class="row">
  <div class="col">
    <div class="">
      <%= link_to(users_path, class: "btn btn-outline-danger btn-block btn-moreinfo-main main-text-color mt-3") do %>
      + <%= User.count-4 %> people
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col">
    <h3 class="main-text-color">Communities
    <br>
    <small class="text-muted">You're not the only one just starting.</small>
    </h3>
  </div>
</div>



<div class="row">
  <% @communities.take(8).each do |community| %>
	  <div class="col-6 col-md-6 col-lg-3 col-xl-3">
    <%= link_to community_path(community), class: "card-community-link" do %>
      <div class="card bg-dark text-white text-white card-field-main  mt-3">
        <%= image_tag community.background, class: "card-commutity-img " if community.background? %>
        <div class="card-img-overlay h-100 d-flex flex-column justify-content-end">
          <div class="just-test">
            <h5 class="card-title card-title-index"><%= truncate(community.name, length: 45 )%></h5>
            <p class="card-text card-text-index card-community-link "><%= truncate(community.description, length: 90 )%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="col">
    <div class="">
      <%= link_to(communities_path, class: "btn btn-outline-danger btn-block btn-moreinfo-main main-text-color mt-3") do %>
      + <%= Community.count-8 %> more
      <% end %>
    </div>
  </div>
</div>
