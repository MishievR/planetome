  <% if @user.topics.count > 1 %>
    <div class="row">
      <div class="col-12 col-sm-12 col-md-8">
        <br>
        <h4 class="main-text-color text-muted">Also there are other topics you can discuss with <%= @topic.user.first_name %> on the meeting </h4>
      </div>
    </div>
    <div class="row">
      <% @user.topics.all_except(@topic).order(:created_at => :DESC).each do |i| %>
      <div class="col-12 col-sm-12 col-md-8">
        <div class="card mt-3">
          <div class="card-body">
            <div class="row">
