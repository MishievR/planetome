                <h4 class="main-text-color text-muted  mb-3">
                  <%= link_to i.title, topic_path(i), class: "main-text-color text-muted", target: :_blank %>
                </h4>
                <h5 class="feed-link  mb-2"><small class="text-muted"><%= i.description %></small></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
