
  <div class="row">
    <div class="col">
      <div class="card card-login">
        <div class="card-body">
          <%= form_for [@project, @update]  do |f| %>
            <div class="row">
              <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <div class="form-group">
                  <%= f.label :Title, class: "control-label" %>
                  <%= f.text_field :name, class: "form-control", placeholder: "Just a few words here", autofocus: true, id: "title-field" %>
                </div>
                <div class="form-group">
                  <%= f.label :Description, class: "control-label" %>
                  <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Everything you want to write", autofocus: false, id: "body-field" %>
                </div>
              </div>
            </div>
          <%= f.submit class: 'btn btn-danger' %>
          <!-- <small class="form-text text-muted">NOTE: It may take some time to upload your background and/or profile image, <strong>don't reload the web page please!</strong></small> -->
        <% end %>
      </div>
    </div>
  </div>
</div>
