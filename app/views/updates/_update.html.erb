<% obj.each do |update| %>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-2"><%= update.name %></h5>
          <p class="card-text"><%= simple_format update.description %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
