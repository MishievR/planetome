<%= render 'shared/errors', obj: @user %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
              <div class="col-md-3">
                <%= image_tag @user.avatar.url(:medium), class: "profilePhoto" if @user.avatar? %>
                <%= f.label :upload_profile_photo %>
                <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
              </div>
              <div class="col-md-3">
                <%= image_tag @user.background, class: "profilePhoto" if @user.background? %>
                <%= f.label :upload_background_photo %>
                <%= f.file_field :background, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
              </div>

              <div class="col-xs-12 col-sm-12 col-md-5 ">
                <div class="form-group">
                  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 ">
                    <%= f.label :first_name, class: "control-label" %>
                    <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name", autofocus: true %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <%= f.label :last_name, class: "control-label" %>
                    <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name", autofocus: true %>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <%= f.label :username, class: "control-label" %>
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                  </div>



                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <%= f.label :something_about_you, class: "control-label" %>
                    <%= f.text_area :about, rows: 3, class: "form-control", placeholder: "About me...", autofocus: true %>
                  </div>
                </div>
              </div>




              <div class="col-xs-12 col-sm-12 col-md-4">

                  <div class="title-category"><h4>Select your interests:</br>
                    <small>One or many</small></h4></div>



</div>
</div>








            <div class="panel-body">
              <div class="form-group">
                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-3">
                  <%= f.submit( "Update account", class: 'btn btn-primary btn-lg') %>
                </div>
              </div>
              <% end %>
            </div>

          </div>
        </div>

        <div class="col-xs-4 col-xs-offset-4">
          [ <%= link_to 'Cancel request and return to listings', root_path %> ]
        </div>
      </div>
    </div>
  </div>
</div>
