<div class="row">
  <div class="col">
    <h3 class="main-text-color">People
    <br>
    <small class="text-muted">Meet people. Connect with anyone. Start together.</small>
    </h3>
  </div>
</div>


<div class="row">
  <% @users.each do |user| %>
  <div class="col-6 col-md-6 col-lg-3 col-xl-3">
    <%= link_to user_path(user), class: "card-user-link"  do %>
    <div class="card card-user card-used-fixedheight mt-3">
      <%= image_tag user.background, class: "card-user-bg-img card-img-top" if user.background? %>
        <div class="card-img-overlay">
          <div class="d-flex justify-content-center">
            <%= image_tag user.avatar.url(:medium), class: "profilePhoto " if user.avatar? %>
          </div>
          <div class="d-flex justify-content-center">
            <h5 class="card-title card-title-user text-center"><%= user.name %></h5>
          </div>
        </div>
      <div class="card-body">
        <p class="card-text card-text-main"><%= truncate(user.about, length: 100 )%></p>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
