
<div class="row">
  <div class="col">
    <h3 class="main-text-color"><%= @user.first_name %>'s Page
    <!-- <br> -->
    <!-- <small class="text-muted">The field where you want to start.</small> -->
    </h3>
  </div>
</div>
<br>
<br>
<div class="row">
  <div class="col-12 order-xs-first col-sm-6 col-md-4 col-lg-3 col-xl-3">
    <%= render 'users/userinfosidebar' %>
  </div>
  <div class="col-12 order-xs-last col-sm-6 col-md-8 col-lg-9 col-xl-9">
    <% if @user.ideas.count == 0 %>
    <div class="row">
      <div class="col">
        <h3 class="main-text-color">News
        <br>
        <small class="text-muted">No submitted news yet.</small>
        </h3>
      </div>
    </div>
    <% else %>
    <div class="row">
      <div class="col">
        <h3 class="main-text-color">Submitted news</h3>
      </div>
    </div>
    <div class="row">
      <% @user.ideas.order(:created_at => :DESC).each do |i| %>
      <div class="col-12 col-sm-12 col-md-10 col-lg-10 col-xl-10">
        <!-- <div class="circle"></div> -->
        <!-- <div class="idea-card"> -->
          <div class="card card-idea-index mt-3">
            <div class="row">
              <%= link_to upvote_idea_path(i), method: :put, class: "btn btn-default  upvote-controls float-left" do %>
                <i class="fas fa-caret-up upvote-arrow"></i>
                <br>
                <div class="upvote-number">
                  <%= i.get_upvotes.size %>
                </div>
              <% end %>
              <div class="col-10 col-sm-9 col-md-10 col-lg-10 col-xl-11">
                <h4 class="main-text-color">
                  <%= link_to i.title, "#{i.link}", class: "main-text-color", target: :_blank %>


                  </h4>
                <h5 class="feed-link"><small class="text-muted"><%= i.link %></small></h5>
                <small class="float-left text-muted" style="margin-top:7px;"><%= time_ago_in_words(i.created_at) %> ago by
                  <% if i.user.present? %>
                  <%= link_to i.user.name, user_path(i.user), class: "main-text-color" %>

                   <% end %>
                <% if current_user.present? && current_user.admin? %>
                <%= link_to " | delete", idea_path(i), method: :delete, class: "add-idea-link", data: { confirm: 'Idea will be deleted permanently. Are you sure?' } %>
                <% end %>

                </small>
              </div>
            </div>
          <!-- </div> -->
        </div>
        <br>
      </div>
      <% end %>
    </div>
    <% end %>

    <% if @user.places.count == 0 %>
    <div class="row">
      <div class="col">
        <h3 class="main-text-color">Places
        <br>
        <small class="text-muted">No added places yet.</small>
        </h3>
      </div>
    </div>
    <% else %>
    <div class="row">
      <div class="col">
        <h3 class="main-text-color">Added places</h3>
      </div>
    </div>

    <div class="row">
      <% @user.places.order(:created_at => :DESC).each do |place| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
        <%= link_to place_path(place), class: "card-community-link" do %>
          <div class="card bg-dark text-white text-white card-field-main  mt-3">
            <%= image_tag place.main_image, class: "card-commutity-img-planetome " if place.main_image? %>
            <div class="card-img-overlay h-100 d-flex flex-column justify-content-end">
              <!-- <h3 class="card-title card-title-index "><strong class="font-red-background-color"><%# community.name %></strong></h3> -->
            </div>
          </div>
          <div class="row">
            <div class="col">
              <h4 class="mt-2 main-text-color"><%= place.name %></strong> </h4>
              <h6 class=" main-text-color text-muted card-office-address-text"><small><%= place.full_address %></small></h6>
              <p class="card-office-info-text">Smart office | WiFi, Desk, Cleaning
                <br>
                $$$
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>

    <% end %>






  </div>


</div>
