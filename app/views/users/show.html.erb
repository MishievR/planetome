
<div class="row">
  <div class="col">
    <% if current_user == @user %>
      <h3 class="main-text-color">Welcome back to your page <%= @user.first_name %></h3>
    <% else %>
      <h1 class="main-text-color">Meet <%= @user.first_name %></h1>
    <% end %>
  </div>
</div>
<br>
<br>
<div class="row">
  <div class="col-12 order-xs-first col-sm-6 col-md-4 col-lg-3 col-xl-3">
    <%= render 'users/userinfosidebar' %>
  </div>
  <div class="col-12 order-xs-last col-sm-6 col-md-8 col-lg-9 col-xl-9">
    <% if @user.topics.count == 0 %>
    <div class="row">
      <div class="col">
        <h3 class="main-text-color">Created topics
        <br>
        <small class="text-muted">No created topics yet.</small>
        </h3>
      </div>
    </div>
    <% else %>
    <div class="row">
      <div class="col">
        <h3 class="main-text-color">Created topics</h3>
        <h4><small class="text-muted">
          <% if current_user == @user %>
            You
          <% else %>
            <%= @user.first_name %>
          <% end %>
           created <%= @user.topics.count %> topics, last one was cretaed <%= time_ago_in_words(@user.topics.last.created_at) %> ago</small></h4>
      </div>
    </div>
    <div class="row">
      <% @user.topics.order(:created_at => :DESC).each do |i| %>
      <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-4">
        <div class="card  mt-3">
          <div class="card-body">
            <div class="row">
              <div class="col-12">
                <h4 class="main-text-color text-center mb-3">
                  <%= link_to i.title, topic_path(i), class: "main-text-color", target: :_blank %>
                </h4>
                <h5 class="feed-link text-center mb-2"><small class="text-muted"><%= i.description %></small></h5>
                <hr class="mb-4">

                <% if current_user == @user %>
                <div class="text-center">
                  <%= link_to "Edit", edit_topic_path(i), class: "btn text-muted" %>
                </div>

                <% else %>
                  <% if i.user.present? %>
                    <h6 class="main-text-color text-center">Created by
                      <%= image_tag i.user.avatar.url(:medium), class: "profilePhotoIndex" if i.user.avatar? %>
                      <%= link_to i.user.first_name, user_path(i.user), class: "user-link-index" %>
                    </h6>
                  <% end %>
                <% end %>

              </div>
            </div>
          </div>
        </div>
        <br>
      </div>
      <% end %>
    </div>
    <% end %>















